<%- include('../partials/html') %>

<head>
  <%- include('../partials/title-meta') %>
  <%- include('../partials/head-css') %>

</head>

<body>

  <!-- Begin page -->
  <div class="wrapper">

    <!-- Sidebar + Topbar (template controlled) -->
    <%- include('../partials/menu') %>

    <!-- Page Content -->
     <div class="content-page">
  <div class="content">
    <div class="container-fluid">

    
        <!-- ===================== -->
        <!-- TABS -->
        <!-- ===================== -->
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#upload" role="tab">
              Upload Pleading
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#documents" role="tab">
              Documents & Merge
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#indexing" role="tab">
              Indexing
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#signatories" role="tab">
              Authorise Signatories
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#oath" role="tab">
              Oath
            </a>
          </li>
        </ul>

        <!-- ===================== -->
        <!-- TAB CONTENT -->
        <!-- ===================== -->
        <div class="tab-content mt-3">

          <!-- TAB 1: UPLOAD -->
         <div class="card-body">

  <div class="row">
    <div class="col-md-4 mb-3">
      <label class="form-label">Document Type</label>
      <select id="docType" class="form-control">
        <option value="">Select</option>
        <option>Petition</option>
        <option>Reply</option>
        <option>Affidavit</option>
      </select>
    </div>

    <div class="col-md-4 mb-3">
      <label class="form-label">Title</label>
      <input id="title" class="form-control">
    </div>

    <div class="col-md-4 mb-3">
      <label class="form-label">Version</label>
      <input id="version" class="form-control" value="v1.0">
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label">Tag</label>
    <input id="tag" class="form-control">
  </div>

  <button id="savePleading" class="btn btn-primary">
    Save (Dummy)
  </button>

</div>
<!-- //table -->
<div class="card mt-3">
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Type</th>
          <th>Title</th>
          <th>Version</th>
          <th>Tag</th>
        </tr>
      </thead>
      <tbody id="pleadingTable">
        <tr>
          <td colspan="5" class="text-muted text-center">
            No pleadings added
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

          <!-- TAB 2: DOCUMENTS & MERGE -->
          <div class="tab-pane fade" id="documents" role="tabpanel">
            <div class="card">
              <div class="card-body">

                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>Order</th>
                      <th>Document Title</th>
                      <th>Version</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>1</td>
                      <td>Petition</td>
                      <td>v1.0</td>
                    </tr>
                    <tr>
                      <td>2</td>
                      <td>Reply</td>
                      <td>v1.0</td>
                    </tr>
                  </tbody>
                </table>

                <button class="btn btn-warning">Merge Documents</button>

              </div>
            </div>
          </div>

          <!-- TAB 3: INDEXING -->
          <div class="tab-pane fade" id="indexing" role="tabpanel">
            <div class="card">
              <div class="card-body">

                <div class="row mb-3">
                  <div class="col-md-3">
                    <input class="form-control" placeholder="Index Title">
                  </div>
                  <div class="col-md-3">
                    <input class="form-control" placeholder="From Page">
                  </div>
                  <div class="col-md-3">
                    <input class="form-control" placeholder="To Page">
                  </div>
                  <div class="col-md-3">
                    <button class="btn btn-success w-100">Add Index</button>
                  </div>
                </div>

                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Index Title</th>
                      <th>From</th>
                      <th>To</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td colspan="4" class="text-muted text-center">
                        No index added
                      </td>
                    </tr>
                  </tbody>
                </table>

              </div>
            </div>
          </div>

          <!-- TAB 4: SIGNATORIES -->
          <div class="tab-pane fade" id="signatories" role="tabpanel">
            <div class="card">
              <div class="card-body">

                <div class="row mb-3">
                  <div class="col-md-3">
                    <input class="form-control" placeholder="Role">
                  </div>
                  <div class="col-md-3">
                    <input class="form-control" placeholder="Name">
                  </div>
                  <div class="col-md-3">
                    <input class="form-control" placeholder="Contact">
                  </div>
                  <div class="col-md-3">
                    <select class="form-control">
                      <option>OTP</option>
                      <option>eSign</option>
                    </select>
                  </div>
                </div>

                <button class="btn btn-primary mb-3">Add Signer</button>

                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Role</th>
                      <th>Name</th>
                      <th>Contact</th>
                      <th>Method</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td colspan="5" class="text-muted text-center">
                        No signers added
                      </td>
                    </tr>
                  </tbody>
                </table>

              </div>
            </div>
          </div>

          <!-- TAB 5: OATH -->
          <div class="tab-pane fade" id="oath" role="tabpanel">
            <div class="card">
              <div class="card-body">

                <div class="row mb-3">
                  <div class="col-md-4">
                    <label>Oath Type</label>
                    <input class="form-control">
                  </div>
                  <div class="col-md-4">
                    <label>Date</label>
                    <input type="date" class="form-control">
                  </div>
                  <div class="col-md-4">
                    <label>File Upload</label>
                    <input type="file" class="form-control">
                  </div>
                </div>

                <div class="mb-3">
                  <label>Notes</label>
                  <textarea class="form-control"></textarea>
                </div>

                <button class="btn btn-success">Save Oath (Dummy)</button>

              </div>
            </div>
          </div>

        </div>
        <!-- END TAB CONTENT -->

      </div>

      <%- include('../partials/footer') %>
    </div>

  </div>

  <%- include('../partials/customizer') %>
  <%- include('../partials/footer-scripts') %>

<!-- js logic  -->
 <script>
  let count = 1;

  document.getElementById("savePleading").addEventListener("click", function () {
    const type = document.getElementById("docType").value;
    const title = document.getElementById("title").value;
    const version = document.getElementById("version").value;
    const tag = document.getElementById("tag").value;

    if (!type || !title) {
      alert("Document Type and Title required");
      return;
    }

    const table = document.getElementById("pleadingTable");

    if (count === 1) table.innerHTML = "";

    table.innerHTML += `
      <tr>
        <td>${count++}</td>
        <td>${type}</td>
        <td>${title}</td>
        <td>${version}</td>
        <td>${tag}</td>
      </tr>
    `;

    document.getElementById("title").value = "";
    document.getElementById("tag").value = "";
  });
</script>



</body>
</html>
