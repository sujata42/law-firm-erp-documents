<%- include('../partials/html') %>

<head>
  <%- include('../partials/title-meta', { title: title }) %>
  <%- include('../partials/head-css') %>
</head>

<body>
<div class="wrapper">

  <!-- Sidebar + Topbar -->
  <%- include('../partials/menu') %>

  <!-- Page Content -->
 <div class="page-content">
  <div class="page-container">

      <!-- Page Title -->
      <div class="mb-4">
        <h4 class="page-title">Document Templates</h4>
      </div>

      <!-- Create Template Form -->
      <div class="card mb-4">
        <div class="card-body">
          <form method="POST" action="/documents/templates">
            <div class="row g-3">
              <div class="col-md-4">
                <label class="form-label">Template Name</label>
                <input name="name" class="form-control" required />
              </div>

              <div class="col-md-4">
                <label class="form-label">Category</label>
                <input name="category" class="form-control" required />
              </div>

              <div class="col-md-12">
                <label class="form-label">Template Content</label>
                <textarea name="content" class="form-control" rows="4"></textarea>
              </div>
            </div>

            <div class="mt-3">
              <button class="btn btn-primary">Create Template</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Templates Table -->
      <div class="card">
        <div class="card-body">
          <table class="table table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Category</th>
                <th style="width: 120px;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (templates.length === 0) { %>
                <tr>
                  <td colspan="3" class="text-center text-muted">
                    No templates found
                  </td>
                </tr>
              <% } %>

              <% templates.forEach(t => { %>
                <tr>
                  <td><%= t.name %></td>
                  <td><%= t.category %></td>
                  <td>
                    <a href="#" class="btn btn-sm btn-outline-primary">Edit</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

    </div>

    <%- include('../partials/footer') %>
  </div>
</div>

<%- include('../partials/customizer') %>
<%- include('../partials/footer-scripts') %>
</body>
</html>
