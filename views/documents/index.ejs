<%- include('../partials/html') %>

<head>
  <%- include('../partials/title-meta', { title: title }) %>
  <%- include('../partials/head-css') %>
</head>

<body>
<div class="wrapper">

  <%- include('../partials/menu') %>

  <div class="page-content">
    <div class="page-container">

      <!-- Page Title -->
      <div class="page-title-box mb-3 d-flex justify-content-between align-items-center">
        <h4 class="page-title">Document Center</h4>
        <a href="/documents/create" class="btn btn-primary">
          Upload Document
        </a>
      </div>

      <!-- Filters -->
      <div class="card mb-3">
        <div class="card-body row g-2">
          <div class="col-md-3">
            <select class="form-control">
              <option value="">All Matters</option>
              <!-- future: populate from matters -->
            </select>
          </div>

          <div class="col-md-2">
            <select class="form-control">
              <option value="">All Types</option>
              <option>Petition</option>
              <option>Annexure</option>
              <option>Affidavit</option>
              <option>Vakalatnama</option>
              <option>Evidence</option>
              <option>Other</option>
            </select>
          </div>

          <div class="col-md-2">
            <input class="form-control" placeholder="Uploaded By">
          </div>

          <div class="col-md-3">
            <input type="date" class="form-control">
          </div>

          <div class="col-md-2">
            <button class="btn btn-outline-primary w-100">
              Apply
            </button>
          </div>
        </div>
      </div>

      <!-- Documents Table -->
      <div class="card">
        <div class="card-body">
          <table class="table table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th>Doc Title</th>
                <th>Matter</th>
                <th>Type</th>
                <th>Version</th>
                <th>Updated At</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (documents && documents.length > 0) { %>
                <% documents.forEach(doc => { %>
                  <tr>
                    <td><%= doc.title %></td>
                    <td>
                      <%= doc.matter_id ? ('Matter #' + doc.matter_id) : '-' %>
                    </td>
                    <td><%= doc.document_type %></td>
                    <td><%= doc.latest_version %></td>
                    <td>
                      <%= doc.updated_at
                        ? new Date(doc.updated_at).toLocaleDateString()
                        : '-' %>
                    </td>
                    <td class="text-center">
                      <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                      <button
                        class="btn btn-sm btn-outline-secondary"
                        data-document-id="<%= doc.id %>">
                        Versions
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-muted">
                    No documents found
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

    </div>

    <%- include('../partials/footer') %>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
</body>
</html>
