<%- include('../partials/html') %>

<head>
  <%- include('../partials/title-meta', { title: title }) %>
  <%- include('../partials/head-css') %>
</head>

<body>
<div class="wrapper">

  <%- include('../partials/menu') %>

  <div class="page-content">
    <div class="page-container">

      <!-- Page Title -->
      <div class="page-title-box mb-3">
        <h4 class="page-title">Upload Document</h4>
      </div>

      <!-- Upload Form -->
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/documents/create">

            <div class="row g-3">

              <!-- Document Title -->
              <div class="col-md-6">
                <label class="form-label">Document Title</label>
                <input
                  type="text"
                  name="title"
                  class="form-control"
                  required>
              </div>

              <!-- Matter -->
              <div class="col-md-6">
                <label class="form-label">Link to Matter</label>
                <select name="matter_id" class="form-control">
                  <option value="">— Not linked —</option>
                  <!-- future: populate from matters -->
                </select>
              </div>

              <!-- Document Type -->
              <div class="col-md-4">
                <label class="form-label">Document Type</label>
                <select
                  name="document_type"
                  class="form-control"
                  required>
                  <option value="">Select Type</option>
                  <option>Petition</option>
                  <option>Annexure</option>
                  <option>Affidavit</option>
                  <option>Vakalatnama</option>
                  <option>Evidence</option>
                  <option>Other</option>
                </select>
              </div>

              <!-- Tags -->
              <div class="col-md-8">
                <label class="form-label">Tags</label>
                <input
                  type="text"
                  name="tags"
                  class="form-control"
                  placeholder="comma-separated (e.g. urgent, draft, signed)">
              </div>

            </div>

            <div class="mt-4 d-flex justify-content-end">
              <a href="/documents" class="btn btn-outline-secondary me-2">
                Cancel
              </a>
              <button type="submit" class="btn btn-primary">
                Save Document
              </button>
            </div>

          </form>
        </div>
      </div>

    </div>

    <%- include('../partials/footer') %>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
</body>
</html>
